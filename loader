import pyfiglet
import os
import subprocess
import urllib.request

def main():
    os.system("cls" if os.name == "nt" else "clear")
    ascii_art = pyfiglet.figlet_format("Loader", font="slant")
    print(ascii_art)

    print("Выбери опцию:")
    print("1. Video montage")
    print("2. Ultimate WIP Tool (Roblox)")
    print("3. Сжатие файла")
    print("4. Скачать видео с YouTube")
    print("5. Проверка интернета")

    choice = input("Введите номер выбранной опции: ")

    if choice == "1":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/montage.py"
        run_from_github(github_url)
    elif choice == "2":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/roblox.py"
        run_from_github(github_url)
    elif choice == "3":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/compression.py"
        run_from_github(github_url)
    elif choice == "4":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/youtube%20downloader"
        github_url = ""  # Вставь сюда ссылку на GitHub
        run_from_github(github_url)
    elif choice == "5":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/Check%20Internet"
        github_url = ""  # Вставь сюда ссылку на GitHub
        run_from_github(github_url)
    else:
        print("Некорректный выбор. Пожалуйста, выбери от 1 до 5.")

def run_from_github(url):
    try:
        response = urllib.request.urlopen(url)
        script_content = response.read().decode('utf-8')
        subprocess.run(['python', '-c', script_content])
    except Exception as e:
        print(f"Ошибка при выполнении скрипта с GitHub: {e}")

if __name__ == "__main__":
    main()
