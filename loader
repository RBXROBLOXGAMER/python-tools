import pyfiglet
import os
import subprocess
import urllib.request


def main():
    os.system("cls" if os.name == "nt" else "clear")
    ascii_art = pyfiglet.figlet_format("Loader 3.0", font="slant")
    print(ascii_art)

    print("Выбери опцию:")
    print("1. Video montage")
    print("2. Ultimate WIP Tool (Roblox)")
    print("3. Сжатие файла")
    print("4. Скачать видео с YouTube")
    print("5. Проверка интернета")
    print("6. Поисковик")

    choice = input("Введите номер выбранной опции: ")

    if choice == "1":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/montage"
        run_from_github(github_url)
    elif choice == "2":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/roblox"
        run_from_github(github_url)
    elif choice == "3":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/compress"
        run_from_github(github_url)
    elif choice == "4":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/youtube%20downloader"

        run_from_github(github_url)
    elif choice == "5":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/Check%20Internet"

        run_from_github(github_url)
    elif choice == "6":
        github_url = "https://raw.githubusercontent.com/RBXROBLOXGAMER/python-tools/main/Founder"

        run_from_github(github_url)
    else:
        print("Некорректный выбор. Пожалуйста, выбери от 1 до 6.")


def run_from_github(url):
    try:
        response = urllib.request.urlopen(url)
        script_content = response.read().decode('utf-8')
        subprocess.run(['python', '-c', script_content])
    except Exception as e:
        print(f"Ошибка при выполнении скрипта с GitHub: {e}")


if __name__ == "__main__":
    main()
